<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simple_voca_player_status_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:text="Random:OFF"
            android:textColor="#FFFFFFFF"/>

        <TextView
            android:id="@+id/simple_voca_player_status_marking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="Diff:NORMAL"
            android:textColor="#FFFFFFFF"/>

    </LinearLayout>



    <TextView
        android:id="@+id/simple_voca_player_word"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:textSize="35dp"
        android:text="TEST"
        android:textColor="#FFFFFFFF"/>
    <TextView
        android:id="@+id/simple_voca_player_meaning"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:gravity="left"
        android:textSize="30dp"
        android:text="TEST\n123"
        android:textColor="#FFFFFFFF"
        android:paddingLeft="10dp"
        android:password="false"
        android:paddingTop="10dp" />

</LinearLayout>